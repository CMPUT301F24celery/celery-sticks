<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context=".ui.myprofile.MyProfileFragment">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:gravity="top"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <Button
        android:id="@+id/facility_details_back_button"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:icon="?attr/homeAsUpIndicator"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_gravity="center">


        <RelativeLayout
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_alignTop="@+id/facility_details_icon_initials"
            android:layout_alignBottom="@+id/facility_details_icon_initials"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_rectangle_filled"
            app:layout_constraintBottom_toBottomOf="@+id/facility_details_icon_initials"
            app:layout_constraintEnd_toEndOf="@+id/facility_details_icon_initials"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/facility_details_icon_initials"
            app:layout_constraintTop_toTopOf="@+id/facility_details_icon_initials"
            >
        </RelativeLayout>

        <TextView
            android:id="@+id/facility_details_icon_initials"
            android:layout_width="145dp"
            android:layout_height="123dp"
            android:padding="5sp"
            android:scaleType="fitXY"
            android:text="F"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="80sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:textSize="22sp"
        android:textColor="#b4f0ee">
    </TextView>

    <TextView
        android:id="@+id/facility_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:textColor="#b4f0ee">
    </TextView>

    <TextView
        android:id="@+id/facility_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Email"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:textColor="#b4f0ee">
    </TextView>

    <TextView
        android:id="@+id/facility_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facility Phone Number"
        android:textSize="22sp" />

    <Button
        android:id="@+id/delete_facility_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/unSelectedRed"
        android:text="Remove Facility"
        android:textStyle="bold"
        android:visibility="visible" />
</LinearLayout>

</FrameLayout>